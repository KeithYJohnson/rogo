%h1 Your Polls

.dashboard-wrapper.row
  .user-polls.span6
    %h1 Your Polls
    %table.table.striped
      - current_user.polls.each do |poll| 
        %tr.polls-data
          %td
            / Need to add (poll) as it needs the ID to match to the route.
            =link_to "#{poll.title} #{poll.id}", poll_path(poll)
          %td
            =link_to "Edit", edit_poll_path(poll)
          %td[poll]
            - if poll.is_live
              = link_to "Stop", polls_toggle_live_path(poll.id), :method => :put, :remote => true, :class=> 'btn btn-danger btn-small stop-poll', :id => poll.id
            -else
              = link_to "Start", polls_toggle_live_path(poll.id), :method => :put, :remote => true, :class=> 'btn btn-success btn-small start-poll', :id => poll.id
            %td
              = link_to "Delete", delete_poll_path(poll.id),:remote => true, :id => poll.id, :method => :delete, :class => 'btn btn-danger btn-small delete-poll'

  .create-polls.span6
    = link_to "Create Poll", new_poll_path, :class => 'btn btn-success'


    